<%- include('./partials/header') %>
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark py-0">
  <div class="container-fluid">
    <a class="navbar-brand" href="/events"
      >Welcome, <%= currentUser.first_name %> !</a
    >
    <button
      class="navbar-toggler py-0 px-1"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mb-2 mb-md-0">
        <li class="nav-item active">
          <a class="nav-link" href="/logout">Log out</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">All Events</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/myEvents">My Events</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div
  class="container-fluid d-flex flex-column overflow-auto h-100 justify-content-start my-5"
>
  <!-- Public Events  -->
  <% publicEvents.forEach(event => { %>
  <div class="card">
    <div
      class="card-body overflow-auto text-body my-1 py-1 bg-info bg-gradient"
    >
      <h5 class="card-title my-1"><%= event.name %></h5>
      <p class="card-text my-1">
        <%= event.start_time %> <%= event.start_date.toLocaleDateString('el-GR')
        %>
      </p>
      <p class="card-text my-1"><%= event.event_location %></p>
    </div>
    <div class="card-foot d-flex justify-content-end w-100">
      <a href="/event/<%= event.id %>" class="btn btn-outline-dark"
        >More Info</a
      >
    </div>
  </div>
  <% }) %>
  <!-- My Events  -->
  <% myEvents.forEach(event => { %>
  <div class="card">
    <div
      class="card-body overflow-auto text-body my-1 py-1 bg-success bg-gradient"
    >
      <h5 class="card-title my-1"><%= event.name %></h5>
      <p class="card-text my-1">
        <%= event.start_time %> <%= event.start_date.toLocaleDateString('el-GR')
        %>
      </p>
      <p class="card-text my-1"><%= event.event_location %></p>
    </div>
    <div class="card-foot d-flex justify-content-end w-100">
      <a href="/event/<%= event.id %>" class="btn btn-outline-dark"
        >More Info</a
      >
    </div>
  </div>
  <% }) %>
</div>

<%- include('./partials/eventsFooter') %>
